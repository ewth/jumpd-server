for secs in $(seq 5 -1 1); do
    num="bignum${secs}"
    echo -e "${col_green}"
    text="${!num}"
    echo "${text}"
        sleep 1
    lines=$(echo "$text" | wc -l)
    for (( i=0; i <= $(($lines)); i++ )); do
        tput cuu1
        tput el
    done
done
flashtime=2
for secs in $(seq 1 10); do
